</head>
<body>
    <canvas id="canvas" width="1024" height="512" style="border:1px solid #000000;">
    Browser doens't support the canvas element.
    </canvas>

    <div class="control-panel">

        <h1>Control Panel</h1>

        <div class="gravity">

            <h3>Gravity Values</h3>

            <p id="g">g costant:</p>
            <input id="gravity-slider" type="range" min="-100.81" max="100.81" value="-9.81">
        </div>

        <hr>
        
    </div>
</body>

<script>
    function Inizialize(){
        var pos = new Vector2(500, 40);
        var obj = new Object();

        obj.AddComponent(new Sprite2D('rect', pos, 100, 100, 'red', true, 2));
        obj.AddComponent(new Rigidbody2D());

        var pos2 = new Vector2(80, 350);
        var obj2 = new Object();

        obj2.AddComponent(new Sprite2D('circle', pos2, 50, 0, 'blue', true, 2));

        Awake();
    }

    Inizialize();

    setInterval(UpdateVariables, 1);

</script>
</html>